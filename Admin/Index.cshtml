@model SimpleJobPortal.Models.AdminViewModel
@{
    Layout = "_Layout";
}

<h1>Admin Dashboard</h1>

<h2>Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <form asp-action="DeleteUser" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@user.UserID" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Jobs</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Employer</th>
            <th>Location</th>
            <th>Posted Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model.Jobs)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.Description</td>
                <td>@job.Employer</td>
                <td>@job.Location</td>
                <td>@job.PostedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <form asp-action="DeleteJob" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@job.JobID" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
