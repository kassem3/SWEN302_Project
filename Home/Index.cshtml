@model IEnumerable<SimpleJobPortal.Models.Job>
@{
    Layout = "_Layout";
}

<h1>Job Listings</h1>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Employer</th>
            <th>Location</th>
            <th>Posted Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.Description</td>
                <td>@job.Employer</td>
                <td>@job.Location</td>
                <td>@job.PostedDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
