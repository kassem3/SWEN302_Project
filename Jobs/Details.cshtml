@model SimpleJobPortal.Models.Job

<h1>Job Details</h1>

<div>
    <h2>@Model.Title</h2>
    <p>@Model.Description</p>
    <p><strong>Employer:</strong> @Model.Employer</p>
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Posted Date:</strong> @Model.PostedDate.ToString("yyyy-MM-dd")</p>
</div>

@if (HttpContext.Session.GetString("Role") == "JobSeeker")
{
    <form asp-action="Apply" asp-controller="Applications" method="get">
        <input type="hidden" name="jobId" value="@Model.JobID" />
        <button type="submit" class="btn btn-primary">Apply</button>
    </form>
}
